{
  "icon": "assets/terraform_logo.png",
  "name": "easy-terraform-commands",
  "displayName": "Terraform Command Center",
  "publisher": "oferkafry",
  "description": "User-friendly yet powerful command center for Terraform",
  "version": "3.1.2",
  "engines": {
    "vscode": "^1.67.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oferca/vscode-ext-tf.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes":{ 
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terraform-dashboard",
          "title": "terraform dashboard",
          "icon": "resources/package-explorer.svg",
          "order": 2
        }
      ]
    },
    "views": {
      "terraform-dashboard": [
        {
          "id": "terraform-dashboard",
          "name": "terraform-dashboard-d"
        }
      ],
      "explorer": [
        {
          "type": "webview",
          "id": "terraform-button-view-explorer",
          "name": "Terraform"
        }
      ],
      "scm": [
        {
          "type": "webview",
          "id": "terraform-button-view-scm",
          "name": "Terraform"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-ext-tf.tfcommand",
        "title": "Run Terraform Command"
      }
    ],
    "keybindings": [
      {
        "command": "terraform.projects",
        "key": "cmd+shift+t"
      },
      {
        "command": "terraform.projects",
        "key": "ctrl+shift+t"
      }
    ]
  },
  "categories": [
    "Programming Languages",
    "Other",
    "Visualization",
    "Linters",
    "Testing"
  ],
  "keywords": [
    "devops",
    "terraform",
    "tf",
    "hashicorp",
    "apply",
    "plan",
    "buttons",
    "output"
  ],
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "find-remove": "^4.1.0",
    "firebase": "^9.21.0",
    "readline": "^1.3.0",
    "vscode-uri": "^3.0.7"
  }
}
